# 环境配置示例文件
# 复制此文件为 .env.local 并填入实际值

# ===========================================
# 应用基础配置
# ===========================================
NEXT_PUBLIC_APP_NAME=小宿AI助手
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_DESCRIPTION=一个简单的AI客户端，支持聊天、图片生成和搜索功能

# ===========================================
# API配置
# ===========================================
# 默认API端点（用户可以在UI中修改）
NEXT_PUBLIC_API_ENDPOINT=https://genaiapi.cloudsway.net

# 可选：预设的API密钥（建议通过UI配置，而不是环境变量）
# NEXT_PUBLIC_DEFAULT_API_KEY=your-api-key-here

# ===========================================
# 开发环境配置
# ===========================================
# 开发模式开关
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# 日志级别 (error, warn, info, debug)
NEXT_PUBLIC_LOG_LEVEL=info

# ===========================================
# 功能开关
# ===========================================
# 启用/禁用特定功能
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_IMAGE_GENERATION=true
NEXT_PUBLIC_ENABLE_VIDEO_GENERATION=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# ===========================================
# UI配置
# ===========================================
# 主题配置
NEXT_PUBLIC_DEFAULT_THEME=light

# 语言配置
NEXT_PUBLIC_DEFAULT_LANGUAGE=zh-CN

# ===========================================
# 分析和监控
# ===========================================
# Google Analytics (可选)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry错误监控 (可选)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# 安全配置
# ===========================================
# CSP配置
NEXT_PUBLIC_CSP_NONCE=

# CORS配置
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# ===========================================
# 性能配置
# ===========================================
# 图片优化
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# 构建优化
NEXT_PUBLIC_BUNDLE_ANALYZER=false

# ===========================================
# 第三方服务配置
# ===========================================
# Docker配置
DOCKER_REGISTRY=
DOCKER_USERNAME=
DOCKER_PASSWORD=

# 部署配置
DEPLOY_URL_STAGING=https://staging.your-domain.com
DEPLOY_URL_PRODUCTION=https://your-domain.com