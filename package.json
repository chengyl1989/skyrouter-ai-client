{
  "name": "skyrouter-ai-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "security-audit": "npm audit --audit-level=moderate",
    "pre-deploy-check": "npm run lint && npm run type-check && npm run test && npm run build",
    "check-all": "npm run lint && npm run type-check && npm run test && npm run test:integration && npm run build && npm run security-audit",
    "deploy:staging": "echo 'Deploy to staging' && npm run build",
    "deploy:production": "echo 'Deploy to production' && npm run build",
    "rollback:quick": "echo 'Rolling back to previous version'",
    "rollback:version": "echo 'Rolling back to specified version'"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.1",
    "axios": "^1.6.0",
    "framer-motion": "^12.23.20",
    "lucide-react": "^0.263.1",
    "next": "14.0.0",
    "postcss": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "msw": "^2.0.8",
    "prettier": "^3.1.0"
  }
}
